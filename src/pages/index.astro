---
import About from '@/components/sections/About.astro';
import Featured from '@/components/sections/Featured.astro';
import Footer from '@/components/sections/Footer.astro';
import Header from '@/components/sections/Header.astro';
import Hero from '@/components/sections/Hero.astro';
import Interests from '@/components/sections/Interests.astro';
import BaseLayout from '@/layouts/BaseLayout.astro';
---

<BaseLayout title="Dot Dager">
  <div
    class="w-dvw h-dvh overflow-y-auto overflow-x-hidden flex flex-col scroll-smooth relative
    bg-[radial-gradient(ellipse_80%_80%_at_50%_-20%,rgb(91,33,182,0.3),rgba(255,255,255,0))]"
  >
    <Header />
    <main>
      <Hero />
      <About />
      <Interests />
      <Featured />
    </main>
    <Footer />
  </div>
</BaseLayout>
