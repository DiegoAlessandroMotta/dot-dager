---
import About from '@/components/sections/About.astro';
import Featured from '@/components/sections/Featured.astro';
import Footer from '@/components/sections/Footer.astro';
import Header from '@/components/sections/Header.astro';
import Hero from '@/components/sections/Hero.astro';
import Interests from '@/components/sections/Interests.astro';
import BaseLayout from '@/layouts/BaseLayout.astro';
---

<BaseLayout
  title="Dot Dager - Creador de Contenido, Programación y Filosofía"
  description="Soy Dot Dager, creador de contenido apasionado por la programación, la filosofía, los gatos y las guitarras, con una extraña obsesión por los pepinos."
  authorName="Dot Dager"
  url="https://dot-dager-pepinos.pages.dev/"
  imageUrl="https://dot-dager-pepinos.pages.dev/img/paper.webp"
  imageAltText="Imagen de Dot Dager posando como trava"
  canonicalUrl="https://dot-dager-pepinos.pages.dev/"
  keywords="programación, filosofía, gatos, guitarras, pepinos, creador de contenido"
>
  <div
    class="h-dvh overflow-y-auto flex flex-col scroll-smooth
    bg-[radial-gradient(ellipse_80%_80%_at_50%_-20%,rgb(91,33,182,0.3),rgba(255,255,255,0))]"
  >
    <Header />
    <main>
      <Hero />
      <About />
      <Interests />
      <Featured />
    </main>
    <Footer />
  </div>
</BaseLayout>
