<style>
  #filosofia-figure {
    position: relative;
    width: 100%;
    height: 300px;
  }

  #filosofia-figure img {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    opacity: 0;
  }

  #filosofia-figure img.active {
    opacity: 1;
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    const images = document.querySelectorAll('#filosofia-figure img');
    let currentIndex = 0;

    function changeImage() {
      images[currentIndex].classList.remove('active');

      currentIndex = (currentIndex + 1) % images.length;

      images[currentIndex].classList.add('active');
    }

    setInterval(changeImage, 3000);

    changeImage();
  });
</script>
