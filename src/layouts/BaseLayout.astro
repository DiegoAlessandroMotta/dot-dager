---
import "@fontsource-variable/inter";

interface Props {
  title: string
}

const {title} = Astro.props
---

<html lang="es">
	<head>
		<meta charset="utf-8" />
		<title>{title}</title>
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
    
		<meta name="color-scheme" content="dark" />
		
    <meta
      name="description"
      content="This web has many interesting things development using basic web concepts and eventualy it is going to scale using more advances concepts"
    />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta property="og:type" content="website" />
    <meta
      property="og:title"
      content="Simple game developed using websocket technology"
    />
    <meta
      property="og:description"
      content="Simple game developed using websocket technology"
    />

	</head>
  <body
    class="bg-white dark:bg-zinc-950 text-zinc-700 dark:text-zinc-300 overflow-y-hidden overflow-x-hidden"
  >
    <div class="w-dvw h-dvh overflow-y-auto overflow-x-hidden flex flex-col">
      <slot />
    </div>
  </body>
</html>
